<div id="blur-div">
  <div id="crop-contain">
    <img src="#" id="grant-img-preview">
  </div>
  <button class="succes button crop-img">Save</button>
</div>
<%= simple_form_for @grant do |f| %>
  <%= f.error_notification %>
  <img src="#" class="final-crop">
  <div class="form-inputs">
    <%= f.input :image, class: "button" %>
    <%= f.input :title, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Name your grant. A good title summarizes the essence of the application." } %>
    <%= f.input :summary, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Give a brief explanation of your application (200 word limit)" } %>
    <%= f.input :subject_areas, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :grade_level, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :duration, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :num_classes, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :num_students, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :total_budget, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :funds_will_pay_for, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :budget_desc, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :purpose, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :methods, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :background, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :num_collabs, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :collaborators, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :comments, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :state, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :video, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.input :deadline, input_html: { "data-tooltip" => true, "data-disable-hover" => true, :class => "has-tip", :title => "Bla bla bla" } %>
    <%= f.hidden_field :status, id: "status" %>
  </div>

    <%= f.button :submit, class: 'hide', id: "new-grant" %>
    <a href="<%= grants_path %>"><button type="button" name="button" class="button primary hollow">Back</button></a>
    <button type="button" name="button" id="submit" class="button float-right warning hollow"><strong>Submit</strong></button>
    <button type="button" name="button" id="draft" class="button float-right secondary hollow"><strong>Save as Draft</strong></button>
<% end %>
