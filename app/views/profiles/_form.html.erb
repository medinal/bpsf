<%= simple_form_for @profile, url: "/user/profile" do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :address %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zipcode %>
    <%= f.input :home_phone %>
    <% if current_user.role == "teacher" %>
      <%= f.input :work_phone %>
      <%= f.input :about, :label => "Teacher background" %>
      <%= f.input :grade, :label => "Grade you teach" %>
      <%= f.input :position %>
      <%= f.input :started_teaching, start_year: Date.today.year - 90, end_year: Date.today.year %>
    <% end %>
  </div>
  <% if @next %>
    <input type="hidden" name="next" value="<%= @next%>">
  <% end %>
  <div class="form-inputs">
    <%= f.button :submit %>
    <a href="<%= user_path %>"><button type="button" name="button" class="button primary">Cancel</button></a>
  </div>
<% end %>
