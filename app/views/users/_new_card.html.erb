<div class="new-card-form" style="width: 100%;">
  <%= form_tag create_card_path do %>
    <div class="form-inputs">
      <div class="row">
        <div class="input column small-6">
          <%= label_tag :name, "Cardholder Name" %>
          <%= text_field_tag :name %>
        </div>
      </div>
      <label>Card Information</label>
      <div class="card-element"></div>

      <h3 class="billing">Billing Address</h3>
      <div class="row">
        <div class="input column small-12">
          <%= label_tag :address_line1, "Address Line 1" %>
          <%= text_field_tag :address_line1 %>
        </div>
      </div>
      <div class="row">
        <div class="input column small-12">
          <%= label_tag :address_line2, "Address Line 2" %>
          <%= text_field_tag :address_line2 %>
        </div>
      </div>
      <div class="row">
        <div class="input column small-5">
          <%= label_tag :address_city, "City" %>
          <%= text_field_tag :address_city %>
        </div>
        <div class="input column small-3">
          <%= label_tag :address_state, "State" %>
          <%= select_tag :address_state, options_for_select(us_states) %>
        </div>
        <div class="input column small-4">
          <%= label_tag :address_country, "Country" %>
          <%= render "country_select" %>
        </div>
      </div>
      <%= hidden_field_tag :card_token %>
      <div style="text-align: center;">
        <%= label_tag :default, "Use as default payment method?" %>
        <%= check_box_tag :default %>
      </div>
      <%= submit_tag "Save", class: "card-submit button warning" %>
      <div class="button warning cancel-edit">Cancel</div>
    </div>
  <% end %>
</div>