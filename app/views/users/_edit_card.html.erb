<%= form_tag edit_card_path do %>
  <div class="row">
    <div class="input column small-6">
      <%= label_tag :name, "Cardholder Name" %>
      <%= text_field_tag :name, card.name  %>
    </div>
  </div>
  <div class="row">
    <div class="input column small-2">
      <%= label_tag :exp_month %>
      <%= select_tag :exp_month, options_for_select(1..12, card.exp_month) %>
    </div>
    <div class="input column small-2">
      <%= label_tag :exp_year %>
      <%= select_tag :exp_year, options_for_select(Time.now.to_date.year..Time.now.to_date.year+20, card.exp_year) %>
    </div>
  </div>
  <h3 class="billing">Billing Address</h3>
  <div class="row">
    <div class="input column small-12">
      <%= label_tag :address_line1, "Address Line 1" %>
      <%= text_field_tag :address_line1, card.address_line1 %>
    </div>
  </div>
  <div class="row">
    <div class="input column small-12">
      <%= label_tag :address_line2, "Address Line 2" %>
      <%= text_field_tag :address_line2, card.address_line2 %>
    </div>
  </div>
  <div class="row">
    <div class="input column small-5">
      <%= label_tag :address_city, "City" %>
      <%= text_field_tag :address_city, card.address_city %>
    </div>
    <div class="input column small-2">
      <%= label_tag :address_state, "State" %>
      <%= select_tag :address_state, options_for_select(us_states, card.address_state) %>
    </div>
    <div class="input column small-2">
      <%= label_tag :address_zip, "Zip Code" %>
      <%= text_field_tag :address_zip, card.address_zip %>
    </div>
    <%= hidden_field_tag :card_id, card.id[(card.id.length/2)..-1], class: "card-id" %>
  </div>
  <div style="text-align: center;">
    <%= label_tag :default, "Use as default payment method?" %>
    <%= check_box_tag :default %>
  </div>
  <% if @next %>
    <input type="hidden" name="next" value="<%= @next%>">
  <% end %>
  <%= submit_tag "Save", class: "button warning" %>
  <div class="button warning cancel-edit">Cancel</div>
<% end %>